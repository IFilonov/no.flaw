<div class="row justify-content-md-center">
  <div class="col-md-auto justify-content-md-center">
    <br>
    <h3 class="text-primary">Glad to welcome you</h3>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <% if @user.email_required? %>
          <%= f.label :email, class: "text-primary" %><br />
          <%= f.email_field :email, :value => @user.email, autofocus: true, autocomplete: "email", class: "form-control shadow" %>
        <% else %>
          <%= f.label :username, class: "text-primary" %><br />
          <%= f.text_field :username, :value => @user.username, autofocus: true, autocomplete: "username", class: "form-control shadow" %>
        <% end %>
      </div>

      <div class="form-group">
        <%= f.label :password, class: "text-primary" %><br />
        <%= f.password_field :password, :value => 'password', autocomplete: "current-password", class: "form-control shadow p-1 mb-3" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-group">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Enter", class: "shadow-lg p-2 mb-4", style: "background-color: #407CDA; color: white" %>
      </div>
    <% end %>
    <%= @resource_names %>
    <br>
    <%= @resource_names.first %>
    <br>
    <%= @resource_names.last %>
    <br>
    <%= session_path(@resource_names.first) %>
    <br>
    <%= session_path(@resource_names.last) %>
    <br>
    <%= render "devise/shared/links" %>
    <br>
    <div>
      <%= link_to  "to #{@resource_names.first.capitalize} part of NoFlaw" , session_path(@resource_names.first),
                   class: 'btn shadow-lg p-2 mb-4', style: "background-color: #407CDA; color: white"%>
    </div>
    <div>
      <%= link_to  "to #{@resource_names.last.capitalize} part of NoFlaw" , session_path(@resource_names.last),
                   class: 'btn shadow-lg p-2 mb-4', style: "background-color: #407CDA; color: white"%>
    </div>
    <br>
    <br>
    <div class="col col-lg-2"></div>
  </div>
</div>